---
import { Icon } from "astro-icon/components";

const year = new Date().getFullYear();

// IMPORTANT: Replace this with your actual Google Maps Embed URL
// You can get this by going to Google Maps, searching for the location,
// clicking 'Share', then 'Embed a map', and copying the src from the iframe code.
const googleMapsEmbedUrl =
  "https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3901.543945156077!2d-86.17760532576695!3d12.074867988164163!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x8f73f8ccad74f691%3A0x408e99da01b92314!2sResidencial%20Casa%20Blanca%2C%20Valle%20Gotel!5e0!3m2!1ses-419!2sni!4v1751409835766!5m2!1ses-419!2sn";
---

<footer class="flex flex-col bg-gray-800 text-white">
  <nav
    class="grid grid-cols-1 gap-10 px-6 pt-8 pb-5 sm:grid-cols-2 sm:px-10 lg:grid-cols-4"
  >
    <!-- Contacto -->
    <section class="flex flex-col gap-4">
      <h2 class="text-tebas-400 font-bold uppercase">Contacto</h2>
      <ul>
        <li><h3>Directora de ventas</h3></li>
        <li>Tania Valeria García Escobar</li>
        <li>+505 7798 8555</li>
        <li>taniav2garcia@tebasconstrucciones.com</li>
      </ul>
    </section>

    <!-- Enlaces -->
    <section class="flex flex-col gap-4">
      <h2 class="text-tebas-400 font-bold uppercase">Enlaces</h2>
      <ul class="flex flex-col gap-2">
        <li>
          <a href="/" class="hover:text-tebas-400 transition-colors">Home</a>
        </li>
        <li>
          <a href="/contactanos" class="hover:text-tebas-400 transition-colors"
            >Contáctanos</a
          >
        </li>
        <li>
          <a
            href="/modelos-blok-on"
            class="hover:text-tebas-400 transition-colors">Modelos Blok-on</a
          >
        </li>
        <li>
          <a
            href="/modelos-tebas"
            class="hover:text-tebas-400 transition-colors">Modelos Tebas</a
          >
        </li>
        <li>
          <a href="/galeria" class="hover:text-tebas-400 transition-colors"
            >Galería</a
          >
        </li>
        <li>
          <a href="/contactanos" class="hover:text-tebas-400 transition-colors"
            >Contáctanos</a
          >
        </li>
      </ul>
    </section>

    <!-- Ubicanos -->
    <section class="flex flex-col gap-4">
      <h2 class="text-tebas-400 font-bold uppercase">Ubícanos</h2>
      <p class="text-sm sm:text-base">
        Km. 14 Carretera a Masaya, 4 kilómetros hacia Veracruz. Residencial Casa
        Blanca, casa b7.
      </p>
      <aside
        class="aspect-square h-full w-full overflow-hidden rounded-lg shadow-lg"
      >
        <iframe
          title="Mapa de google maps con la dirección Km. 14 Carretera a Masaya, 4 kilómetros hacia Veracruz. Residencial Casa Blanca, casa b7"
          src={googleMapsEmbedUrl}
          class="h-full w-full rounded"
          allowfullscreen
          loading="lazy"
          style="border: 0"
          referrerpolicy="no-referrer-when-downgrade"></iframe>
      </aside>
    </section>

    <!-- Siguenos -->
    <section class="flex flex-col gap-4">
      <h2 class="text-tebas-400 font-bold uppercase">Síguenos</h2>
      <ul class="flex flex-wrap gap-4 text-3xl">
        <li>
          <a
            href="https://www.facebook.com/share/19bHFMUjYo/"
            aria-label="Facebook"
            class="hover:text-tebas-400 transition-colors"
            target="_blank"
            rel="noopener noreferrer"
            role="button"
          >
            <Icon name="ic:baseline-facebook" />
          </a>
        </li>
        <li>
          <a
            href="https://www.tiktok.com/@construccion.grupotebas"
            aria-label="TikTok"
            class="hover:text-tebas-400 transition-colors"
            target="_blank"
            rel="noopener noreferrer"
            role="button"
          >
            <Icon name="ic:baseline-tiktok" />
          </a>
        </li>
        <li>
          <a
            href="https://www.instagram.com/grupo_tebas/"
            aria-label="Instagram"
            class="hover:text-tebas-400 transition-colors"
            target="_blank"
            rel="noopener noreferrer"
            role="button"
          >
            <Icon name="mdi:instagram" />
          </a>
        </li>
        <li>
          <a
            href="https://wa.me/+50577988555?text=Buenas tardes, estoy aquí por la página web ¿Podría compartirme el cátalogo de modelos?"
            aria-label="WhatsApp"
            class="hover:text-tebas-400 transition-colors"
            target="_blank"
            rel="noopener noreferrer"
            role="button"
          >
            <Icon name="ic:baseline-whatsapp" />
          </a>
        </li>
      </ul>
    </section>
  </nav>

  <!-- Copyright -->
  <div
    class="w-full bg-gray-950 p-6 text-center text-sm text-gray-400 sm:text-base"
  >
    <small>
      Copyright ©{year} Tebas: construcciones, soluciones y diseños | Desarrollada
      por
      <a
        target="_blank"
        rel="noopener noreferrer"
        class="font-medium hover:text-white"
        href="https://github.com/Auntjoestar"
      >
        Auntjoestar
      </a>
    </small>
  </div>
</footer>
