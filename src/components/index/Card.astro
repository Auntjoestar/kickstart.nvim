---
import { Icon } from 'astro-icon/components'

interface Props {
	name: string
	text: string
	bg: string
}

const { name, text, bg } = Astro.props
---

<div>
	<div
		class=`card ${bg} flex size-full flex-col items-center justify-center rounded p-1 transition-transform hover:scale-105 hover:contrast-125`
	>
		<Icon name={name} class="size-12" />
		<span class="font-secondary mt-2 font-semibold">{text}</span>
	</div>
</div>
