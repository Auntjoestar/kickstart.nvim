---
import { Image } from "astro:assets";

interface Props {
  description: string;
  time: string;
  reference: string;
  cta: string;
  logo: ImageMetadata;
  alt: string;
  classList?: string;
  imageClassList?: string;
  buttonClassList: string[];
}

const {
  logo,
  description,
  time,
  reference,
  cta,
  alt,
  classList,
  imageClassList,
  buttonClassList,
} = Astro.props;
---

<section class="flex flex-col gap-8 px-30 py-20" class:list={classList}>
  <div class="flex items-end">
    <figure>
      <Image src={logo} alt={alt} class:list={imageClassList} class="w-72" />
    </figure>
  </div>
  <div class="text-md flex flex-col gap-8 font-normal">
    <p>
      {description}
    </p>
    <p>
      <strong class="font-bold">Tiempo de construcci√≥n:</strong>
      {time}
    </p>
    <a
      class="w-fit self-center rounded px-6 py-3 font-semibold transition-colors hover:cursor-pointer"
      class:list={buttonClassList}
      href={reference}>{cta}</a
    >
  </div>
</section>
