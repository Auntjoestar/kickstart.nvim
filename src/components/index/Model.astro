---
import { Image } from 'astro:assets'

interface Props {
	description: string
	time: string
	reference: string
	cta: string
	logo: ImageMetadata
	alt: string
	classList?: string
	imageClassList?: string
}

const { logo, description, time, reference, cta, alt, classList, imageClassList } = Astro.props
---

<div class="flex flex-col gap-8 p-30" class:list={classList}>
	<div class="flex items-end">
		<Image src={logo} alt={alt} class:list={imageClassList} class="w-72" />
	</div>
	<div class="flex flex-col gap-8">
		<p>
			{description}
		</p>
		<p>
			<span class="font-bold">Tiempo de construcci√≥n:</span>
			<span>{time}</span>
		</p>
		<a
			class="w-fit self-center rounded bg-cyan-600 px-6 py-3 font-semibold text-white transition-colors hover:cursor-pointer hover:bg-cyan-700"
			href={reference}>{cta}</a
		>
	</div>
</div>
