---
import type { ImageMetadata } from "astro";
import { Image } from "astro:assets";

interface Props {
  imgSrc: ImageMetadata;
  imgAlt: string;
}

const { imgSrc, imgAlt } = Astro.props;
---

<figure class="h-full w-full rounded-2xl">
  <Image
    src={imgSrc}
    alt={imgAlt}
    class="aspect-square h-full w-full rounded-2xl object-cover"
  />
</figure>
