---
import { Icon } from "astro-icon/components";
import { Image } from "astro:assets";

interface Props {
  title: string;
  img: ImageMetadata;
  imgAlt: string;
  width: number;
  height: number;
  description: string;
  bedrooms: number;
  bathrooms: number;
  area: number;
  className: string;
}

const {
  title,
  description,
  img,
  imgAlt,
  width,
  height,
  bedrooms,
  bathrooms,
  area,
  className,
} = Astro.props;
---

<div
  class={`flex flex-col md:flex-row w-full rounded-lg border border-gray-200 bg-white shadow-lg ${className}`}
>
  <a href={img.src} target="_blank" class="w-full md:w-1/3">
    <Image
      class="aspect-video h-full w-full rounded-t border border-gray-600 object-cover md:rounded-l md:rounded-tr-none"
      src={img}
      alt={imgAlt}
      width={width}
      height={height}
    />
  </a>
  <div class="flex w-full flex-col gap-2 md:w-2/3">
    <a href="#">
      <h2
        class="px-4 pt-4 text-lg font-bold tracking-tight text-gray-900 md:text-xl dark:text-white"
      >
        {title}
      </h2>
    </a>
    <p class="line-clamp-5 overflow-hidden px-4 text-sm md:text-base">
      {description}
    </p>
    <ol
      class="flex flex-col justify-around gap-2 border-y border-gray-600 p-4 text-sm md:flex-row md:text-base"
    >
      <li class="flex items-center gap-1">
        <Icon name="mdi:bedroom" class="size-5 md:size-6" />
        {`${bedrooms} ${bedrooms === 1 ? "Cuarto" : "Cuartos"}`}
      </li>
      <li class="flex items-center gap-1">
        <Icon name="mdi:bathroom" class="size-5 md:size-6" />
        {`${bathrooms} ${bathrooms === 1 ? "Baño" : "Baños"}`}
      </li>
      <li class="flex items-center gap-1">
        <Icon name="ic:baseline-house" class="size-5 md:size-6" />
        {`${area} m²`}
      </li>
    </ol>

    <a
      href="#"
      class="mx-auto my-4 w-fit rounded bg-cyan-600 px-5 py-2 text-sm font-semibold transition-colors hover:cursor-pointer hover:bg-cyan-700 md:px-6 md:py-3 md:text-base"
    >
      Ver más
    </a>
  </div>
</div>
